pipeline {
    agent any

    stages {
        stage('Checkout Repositories') {
            parallel {
                stage('Checkout Repo 1') {
                    steps {
                        script {
                            // Checkout first repository
                            checkout([$class: 'GitSCM',
                                branches: [[name: '*/main']],
                                userRemoteConfigs: [[url: 'https://github.com/your-org/first-repo.git']]
                            ])
                        }
                    }
                }
                stage('Checkout Repo 2') {
                    steps {
                        script {
                            dir('second-repo') { // Use a separate directory for the second repo
                                checkout([$class: 'GitSCM',
                                    branches: [[name: '*/main']],
                                    userRemoteConfigs: [[url: 'https://github.com/your-org/second-repo.git']]
                                ])
                            }
                        }
                    }
                }
            }
        }

        stage('Build Repositories') {
            parallel {
                stage('Build Repo 1') {
                    steps {
                        script {
                            // Build steps for first repository
                            echo "Building Repo 1"
                            // Replace with your actual build commands
                        }
                    }
                }
                stage('Build Repo 2') {
                    steps {
                        script {
                            dir('second-repo') { // Ensure you're in the correct directory
                                // Build steps for second repository
                                echo "Building Repo 2"
                                // Replace with your actual build commands
                            }
                        }
                    }
                }
            }
        }
    }
    
    post {
        always {
            echo 'Cleaning up...'
            // Any cleanup actions
        }
    }
}
