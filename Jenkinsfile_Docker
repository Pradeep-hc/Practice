pipeline {
    agent any

    stages {
        stage ('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'itd', url: 'https://github.com/Pradeep-hc/itd-devops.git']])
                                  }
        }
        
        stage ('Build') {
            steps {
                sh 'ls -lrt'
            }
        }
    }
}