pipeline {
    agent any

    environment {
        BRANCH = 'main'
        CRED_ID = 'key'
        GIT_URL = 'https://github.com/Pradeep-hc/app.git'
    }

        stages {

            stage ('checkout') {
                steps {
                    git branch: "${env.BRANCH}",
                    credentialsId: "${env.CREd_Id}",
                    url: "${env.GIT_URL}"

            }
        }

        stage('check checkout') {
            steps {
                sh 'ls -lrt'
            }
        }
        pipeline {

agent any

stages {
    stage('BUILD_main') {
        when {
            branch 'main'
        }
        steps {
            echo "Building the app from main branch"
            sh 'ls -lrt'

        }
    }
    stage('BUILD_dev') {
        when {
            branch 'dev'
        }
        steps {
            echo "Building the app from dev branch"
            sh 'ls -lrt'
        }
    }
}
}
    }
}